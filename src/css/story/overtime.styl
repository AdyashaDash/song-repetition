// (needs to be kept in parallel with corresponding vars in overtime.js)
$allsongs-color = steelblue
$hits-color = orange

#overtime-graphic
    svg
        border none
        box-shadow none
        .title
            alignment-baseline hanging
        .legend
            smallcaps()
    .spacer
        height 300px
    .graphic-vis
        position absolute
        top 0
        margin-left 30rem
        transform translate3d(0, 0, 0)
        height 100vh
    .graphic-vis.is-fixed
        position fixed
    .graphic-vis.is-bottom
        top auto
        bottom 0
    .graphic
        width 100%
        position relative
    .scrolly-slide
        border-left 4px solid $allsongs-color
    .scrolly-slide.hits
        border-left 4px solid $hits-color
