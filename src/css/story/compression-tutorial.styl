#compression-mini
    width 100%
    //max-width 70rem
    margin-top 5rem
    // Chosen to match height of SVG. Fragile.
    padding-bottom 500px
    .reduction
      pointer-events none
      font-family $atlas
      font-weight 500
    .size-original
      pointer-events none
      font-family $atlas
      font-size .85rem
    .size-compressed
      pointer-events none
      font-family $atlas
      font-size .85rem
    .odometer
        border-top 1px dashed #d4d4d4
    .slide-wrapper.slide
        padding 1.5rem
    +desktop()
        .slide-wrapper
            // On desktop, slides become active just before they hit the top of the 
            // viewport. The top-padding gives how much before the top they become active.
            // On mobile, the situation is reversed (see below)
            padding-top 10rem
            padding-bottom 0rem
        .slide-wrapper.first
            padding-top 5em
        .slide-wrapper.last
            padding-bottom 0
        .slide-wrapper.progressive
            padding-top 15em
    +mobile()
        .slide-wrapper
            padding-top 0
            padding-bottom 16rem
        .slide-wrapper.first
            padding-top 30rem
        .slide-wrapper.progressive
            padding-bottom 15em        
        /*
        .slide
            // I've tried fading/hiding non-active slides, but it just ends up
            // being jarring if they suddenly disappear, or messy if a translucent
            // version is sitting on top of the graphic. Ideal sol'n would be to 
            // tween opacity to 0 as they slide up and out.
            opacity 1
        .slide.active
            opacity 1
        */
    .slide code
        background-color powderblue
        padding .1em .25em
    .slide .sidenote
        margin-top 1rem
        font-style italic
    .slide .sidenote::before
        content "*"
        margin-right .3ch


.graphic-vis
  h2
    margin-top 1.5rem
    margin-bottom 1.3rem
    font-size 1.8rem
    font-weight 100
    max-width 100%
    font-family $canela
  svg
    border 1px dashed #8c8c8c
    box-shadow 7px -6px 0 1px #f5f5f5

.ditto
  cursor pointer

.ditto:hover
  fill black
.odometer
  line
    stroke-width 1px
    shape-rendering crispEdges
    stroke #8c8c8c
