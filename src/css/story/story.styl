fontify($ptSerif, $ptSerif-hash, $serif)
fontify($roboto, $roboto-hash, $sans)

html, body
	background-color #fff
	color $off-black
	font-size 17px

p 
	line-height 1.6
	margin-bottom 10px

h1
	font-size 32px
	margin-bottom 30px
h2
	font-size 24px
	margin-bottom 20px
footer
	// XXX: hiding this for now because CSS is hard
	display: none
small
	font-size 70%
button
	padding: 6px
	margin 6px
	border-radius 5px
.decade-controls a
	cursor pointer
	margin-left 5px
.decade-controls a.active
	border 1px solid #777
	font-weight bold
