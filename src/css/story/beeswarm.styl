        font-size .7rem
        text, tspan
            fill #fff
            stroke #000
            paint-order stroke
            stroke-width 2px
            stroke-linejoin round
            font-weight bold
            text-anchor middle
        circle
            // TODO: could also try a shadow or something?
            stroke #444
            stroke-width 1px
    .axis
        text-anchor middle
        .label
          font-family $atlas
          font-size .75rem
          font-weight 500
          text-transform uppercase
          fill #777

