#topsongs
    width 90%
    margin 0 auto
    background-color #fff
    margin-bottom 5rem
    table
        border-collapse collapse
        width 100%
    td
        padding-top 0
        padding-bottom 0
    a
        cursor pointer
    a.expander
        text-align center
        margin 0 auto
        width 15%
        display block
        border 2px solid $gray
        border-radius 5px
        smallcaps()
    th
        smallcaps()
        text-align left
    tr th:nth-child(1)
        width 2rem
    tr th:nth-child(3)
        width 45%
    tr
        border-bottom 1px solid $gray
    thead tr
        border-bottom 1px solid #000
    .bar
        padding-left 10px
        height 1.5rem
    .bar span
        color white
        font-size .8rem
        font-weight bold
    .track .title
        font-weight bold

