$grey = #bbb

#topsongs
    width 90%
    margin 0 auto
    background-color #fff
    margin-bottom 5rem
    table
        border-collapse collapse
        width 100%
    td
        padding-top 0
        padding-bottom 0
    a
        cursor pointer
    a.expander
        text-align center
        margin 0 auto
        width 15%
        display block
        border 2px solid $grey
        border-radius 5px
        smallcaps()
    .decade-controls
        margin 0 auto
        width 33%
        border 2px solid $grey
        border-radius 5px
        display block
        a.decade
            text-align center
            display inline-block
            height 3rem
            vertical-align middle
            width 13%
            border 1px solid $grey
            color $grey
            smallcaps()
        a.decade.active
            color #000
    th
        smallcaps()
        text-align left
    tr th:nth-child(1)
        width 2rem
    tr th:nth-child(3)
        width 45%
    tr
        border-bottom 1px solid $grey
    thead tr
        border-bottom 1px solid #000
    .bar
        padding-left 10px
        height 1.5rem
    .bar span
        color white
        font-size .8rem
        font-weight bold
    .track .title
        font-weight bold

